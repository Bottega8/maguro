#!/usr/bin/env ruby
require 'thor'
require 'rails'

class MaguroCLI < Thor
  include Thor::Actions

  desc "new APP", "creates a new rails project named APP"
  def new(name)
    template_path = File.expand_path("../../template.rb", __FILE__)
    run "rails new #{name} -m #{template_path}"
  end
end

MaguroCLI.start(ARGV)